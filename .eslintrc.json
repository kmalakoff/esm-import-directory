{
  "extends": ["standard", "prettier"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-var": "off",
    "no-extend-native": "off",
    "import/extensions": ["error", "always", { "js": "never" }],
    "no-throw-literal": "off"
  }
}
