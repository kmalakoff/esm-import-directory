{
  "name": "esm-import-directory",
  "version": "2.4.1",
  "description": "Import a directory of modules using es6 modules import",
  "keywords": [
    "esm",
    "es6",
    "import",
    "require",
    "directory",
    ".mjs"
  ],
  "homepage": "https://github.com/kmalakoff/esm-import-directory#readme",
  "bugs": {
    "url": "https://github.com/kmalakoff/esm-import-directory/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmalakoff/esm-import-directory.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.esm.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.esm.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "deploy": "tsds deploy",
    "format": "biome check --apply-unsafe src/ test/",
    "test": "npm run test-cjs && npm run test-esm",
    "test-cjs": "tsds link && mocha-compat test/spec/**/*.test.js && tsds unlink",
    "test-esm": "tsds link && nvu 14 mocha test/spec/**/*.test.mjs && tsds unlink",
    "test:engines": "nvu engines npm test --no-timeout",
    "version": "tsds version"
  },
  "dependencies": {
    "esm-require-directory": "^2.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "depcheck": "^1.4.7",
    "lodash.size": "^4.2.0",
    "mocha": "^10.3.0",
    "mocha-compat": "^3.5.5",
    "node-version-use": "^0.4.8",
    "ts-dev-stack": "^0.12.3"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index.js",
    "targets": [
      "cjs",
      "esm"
    ]
  }
}
