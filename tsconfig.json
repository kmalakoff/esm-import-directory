{
  "compilerOptions": {
    "lib": ["es2015", "dom", "dom.iterable"],
    "types": ["mocha", "node"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "test"]
}
